<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppEventosPet.Views.ResumoEvento"
    Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Resumo do Evento"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding Nome, StringFormat='Nome da Pessoa: {0}'}"/>
            <Label Text="{Binding Tipo, StringFormat='Tipo de Evento: {0}'}"/>
            <Label Text="{Binding Cidade, StringFormat='Cidade: {0}'}"/>
            <Label Text="{Binding DataInicio, StringFormat='Data de Início: {0:dd/MM/yyyy}'}"/>
            <Label Text="{Binding DataTermino, StringFormat='Data de Término: {0:dd/MM/yyyy}'}"/>
            <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}"/>
            <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: R$ {0:F2}'}"/>
            <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dia(s)'}"/>
            <Label Text="{Binding CustoTotal, StringFormat='Custo Total: R$ {0:F2}'}"
                   FontAttributes="Bold"
                   TextColor="DarkRed"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
