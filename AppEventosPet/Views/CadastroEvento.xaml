<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppEventospet.Views.CadastroEvento"
    Title="Cadastro de Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Cadastro de Evento"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Label Text="Tipo de Evento"/>
            <Picker Title="Selecione o Evento"
                    ItemsSource="{Binding TiposEvento}"
                    SelectedItem="{Binding Tipo}"/>

            <Label Text="Cidade"/>
            <Picker Title="Selecione a Cidade"
                    ItemsSource="{Binding Cidades}"
                    SelectedItem="{Binding Cidade}"/>

            <Label Text="Nome do Evento"/>
            <Entry Placeholder="Digite o nome do evento"
                   Text="{Binding Nome}"/>

            <Label Text="Data de Início"/>
            <DatePicker Date="{Binding DataInicio}"/>

            <Label Text="Data de Término"/>
            <DatePicker Date="{Binding DataTermino}"/>

            <Label Text="Número de Participantes"/>
            <Stepper Minimum="1"
                     Maximum="500"
                     Increment="1"
                     Value="{Binding NumeroParticipantes}"/>
            <Label Text="{Binding NumeroParticipantes}"
                   HorizontalOptions="Center"
                   FontSize="18"/>

            <Label Text="Custo por Participante"/>
            <Entry Placeholder="Digite o custo por participante"
                   Keyboard="Numeric"
                   Text="{Binding CustoPorParticipante}"/>

            <Button Text="Cadastrar Evento"
                    Clicked="OnCadastrarClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
